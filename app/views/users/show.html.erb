  <!-- Cas 1: un user est place owner -->
  <% if @user.band_manager == false %>

  <div class="dashboard-container-owner">
    <div class="profil">
      <div class="profil-pic">
          <% if @user.avatar.present? %>
            <%= cl_image_tag(@user.avatar, class:"avatar-very-large", crop: :fill) %>
            <p class="text-center"><%= @user.first_name %> <%= @user.last_name %></p>
          <% else %>
            <%= cl_image_tag("http://www.castlehearing.co.uk/wp-content/uploads/2016/03/profile-placeholder.jpg", class:"avatar-very-large", crop: :fill) %>
            <h4><%= link_to "Edit profile", edit_user_path(@user) %></h4>
          <% end %>
      </div>
      <div class="profil-places">
        <% places = @user.places %>
        <% places.each do |place| %>
          <div class="mini-card">
            <div class="mini-card-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path place.photo, height: 150, width: 200,crop: :fill %>')"> </div>
            <div class="mini-card-content">
              <div class="mini-place-name">
                <h3><%= link_to place.name, place_path(place), target: "blank" %></h3>
              </div>
              <div class="mini-place-price">
                <p><em><%= place.price %>€ per hour</em></p>
              </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>

    <div class="pending-reservations reservations">
      <h4>Pending reservations:</h4>
      <% @user.pending_reservations_as_owner.each do |resa| %>
        <h5><%= resa.place.name  %></h5>
        <p><%= resa.date %></p>
        <p><%= resa.price %></p>
        <p><%= resa.user.band_name.present? ? resa.user.band_name : resa.user.first_name%></p>
      <% end %>
    </div>

    <div class="today-reservations reservations">
      <h4>Today reservations:</h4>
      <% @user.today_reservations_as_owner.each do |resa| %>
        <h5><%= resa.place.name  %></h5>
        <p><%= resa.date %></p>
        <p><%= resa.price %></p>
        <p><%= resa.user.band_name.present? ? resa.user.band_name : resa.user.first_name%></p>
        <% end %>
    </div>

    <div class="all-reservations reservations">
      <h4>All my reservations:</h4>
      <% @user.all_reservations_as_owner.each do |resa| %>
        <h5><%= resa.place.name  %></h5>
        <p><%= resa.date %></p>
        <p><%= resa.price %></p>
        <p><%= resa.user.band_name.present? ? resa.user.band_name : resa.user.first_name%></p>
        <% end %>
    </div>
  </div>

  <!-- Cas 2: un user est group manager -->
  <% elsif @user.band_manager == true %>

  <div class="dashboard-container-band">
    <div class="profil-band">
      <div class="profil-pic">
          <% if @user.avatar.present? %>
            <%= cl_image_tag(@user.avatar, class:"avatar-very-large", crop: :fill) %>
            <p class="text-center"><%= @user.first_name %> <%= @user.last_name %></p>
          <% else %>
            <%= cl_image_tag("http://www.castlehearing.co.uk/wp-content/uploads/2016/03/profile-placeholder.jpg", class:"avatar-very-large", crop: :fill) %>
            <h4><%= link_to "Edit profile", edit_user_path(@user) %></h4>
          <% end %>
      </div>
      <div class="band-card">
      </div>
    </div>

    <div class="today-reservations-band reservations">
      <h3>Today reservations:</h3>
    </div>

    <div class="all-reservations-band reservations">
      <h3>All my reservations:</h3>
      <% if @user.reservations.length >= 1 && %>
        <% @user.reservations.each do |reservation| %>
          <% if reservation.status == "accepted" %>
            <h5><%= link_to reservation.place.name, place_path(reservation.place), class:"bar-link" %></h5>
            <p><%= reservation.place.address%></p>
            <p><%= reservation.date.year %>.<%= reservation.date.month %>.<%= reservation.date.day %> at <%= reservation.date.hour %>:<%= reservation.date.min %> for <%= reservation.duration %> hours</p>
            <p><em><%= reservation.place.price * reservation.duration %>€<em></p>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

  <% end %>
