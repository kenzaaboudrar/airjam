<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url('<%= cl_image_path @place.photo %>')">
</div>

<div class="container">
  <div class="row">

    <div class="col-md-8">
      <div class="flat-info">
        <% if @place.user == current_user %>
          <div class="price">
            <h3><strong><%= @place.price %>€</strong></h3>
            <p>per hour</p>
          </div>
        <% end %>
        <div class="recap">
          <p class="category"><%= @place.category.upcase %></p>
          <div class="main-info">
            <div class="title">
              <h2><strong><%= @place.name %></strong></h2>
              <p><%= @place.address %></p>
            </div>
            <div class="user text-center">
              <% if @place.user == current_user %>
                <%= link_to "Edit", edit_place_path(@place), class: "btn btn-info" %>
              <% else %>
                <% if @place.user.avatar.present? %>
                  <%= cl_image_tag @place.user.avatar, class: "avatar-large" %>
                <% else %>
                  <p><img class="avatar-large" src="http://www.clker.com/cliparts/m/3/I/C/c/2/grey-silhouette-of-man-hi.png" alt="silhouette"></p>
                <% end %>
                <p><%= @place.user.first_name %></p>
              <% end %>
            </div>
          </div>
          <div class="details">
            <p><i class="fa fa-users"></i> <%= @place.stage_capacity %></p>
            <% if @place.equipped %>
              <p><i class="fa fa-microphone"></i> <%= "fully-equipped" %></p>
            <% else %>
              <p><i class="fa fa-microphone-slash"></i> <%= "not equipped" %></p>
            <% end %>
          </div>
        </div>
        <div class="description">
          <p><%= @place.description %></p>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <% if @place.user == current_user %>
        <h3>Reservations</h3>
        <div class="pending-reservations">
          <% @place.reservations.order(:date).each do |reservation| %>
            <% if reservation.status == "pending" %>
              <div class="recap-reservation">
                <div class="request">
                  <p><%= reservation.status.upcase %></p>
                  <h4><strong><%= reservation.price %>€</strong></h4>
                </div>
                <div class="date">
                  <h4><strong><%= reservation.date.day %>/<%= reservation.date.month %>/<%= reservation.date.year %> at <%= reservation.date.hour %>:<%= reservation.date.min %></strong></h4>
                  <p>Duration: <%= reservation.duration %>h</p>
                </div>
                <div class="change-status">
                  <p><%= link_to "ACCEPT", accept_reservation_path(reservation), class: "btn btn-success btn-accept", method: :patch %></p>
                  <p class="declined"><%= link_to "DECLINE", decline_reservation_path(reservation), class: "btn btn-danger btn-decline", method: :patch %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
        <div class="answered-reservations">
          <% @place.reservations.order(:date).each do |reservation| %>
            <% if reservation.status != "pending" %>
              <div class="recap-reservation">
                <div class="request">
                  <p><%= reservation.status.upcase %></p>
                  <h4><strong><%= reservation.price %>€</strong></h4>
                </div>
                <div class="date">
                  <h4><strong><%= reservation.date.day %>/<%= reservation.date.month %>/<%= reservation.date.year %> at <%= reservation.date.hour %>:<%= reservation.date.min %></strong></h4>
                  <p>Duration: <%= reservation.duration %>h</p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>



      <% else %>
        <h3>Book now</h3>
        <div class="reservation">
          <div class="price">
            <h4><strong><%= @place.price %>€</strong></h4>
            <p>per hour</p>
          </div>
          <%= simple_form_for [@place, @reservation] do |f| %>
            <%= f.input :date, as: :string, input_html: {class: "datepicker"} %>
            <%= f.input :duration %>
            <%= f.submit "Make a booking request", class: "btn btn-info btn-full-width btn-yellow" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
