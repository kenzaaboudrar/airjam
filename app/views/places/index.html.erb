

<div class="filter-bar">
  <div class="filter btn">City</div>
  <!-- insert logic behind each filter -->
  <div class="filter btn">Capacity</div>
  <!-- insert logic behind each filter -->
  <div class="filter btn">Equipment</div>
  <!-- insert logic behind each filter -->
  <div class="filter btn">Price</div>
  <!-- insert logic behind each filter -->
</div>
<div class="main-container">
  <div class="cards-container container">
    <div class="row">
      <% @places.each do |place| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="card">
            <div class="card-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path place.photo, height: 300, width: 400,crop: :fill %>')">
            </div>
            <div class="card-content">
              <div class="place-category">
                <p><%= place.category.upcase %></p>
              </div>
              <div class="place-name">
                <h3><%= link_to place.name, place_path(place) %></h3>
              </div>
              <div class="place-price">
                 <p><em><%= place.price %>â‚¬ per hour</em></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div id="map" data-markers="<%= @markers.to_json %>"></div>
</div>
<%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?libraries=places&key=#{ENV['GOOGLE_API_BROWSER_KEY']}" %>
<%= javascript_pack_tag "map" %>
