
  <div class="home-banner" style="background-image: linear-gradient(-225deg, rgba(20, 20, 20, 0.4) 0%, rgba(20, 20, 20, 0.4) 50%), url('https://images.pexels.com/photos/534258/pexels-photo-534258.jpeg?w=940&h=650&auto=compress&cs=tinysrgb')">
    <div class="container">
        <div class="text-container">
        <h1 class="text-center">Airjam</h1>
<!--         <div class="text-center"> link_to image_tag "white-logo.png", id: "white-logo" </div> -->
        <h3 class="text-center">Find open mics, bars and other venues for you and your band.</h3>
        <div>
          <div class="input-group">
            <%= form_tag places_path, class: "flexbox", method: :get do %>
              <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                placeholder: "e.g. Paris, 75010, jazz, ..."
              %>
              <%= submit_tag :Search, class: "btn btn-info"  %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <h3 class="text-center sub-title">Some good places to play</h3>

<% places = Place.all %>
<div class="container">
<div class="main-container">
  <div class="cards-container">
    <div class="row">
      <% places.sample(3).each do |place| %>
          <div class="col-xs-12 col-sm-6 col-md-4">
            <%= render 'shared/card', place: place %>
          </div>
      <% end %>
    </div>
  </div>
</div>
</div>



